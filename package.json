{
	"name": "wmp-sfdx",
	"displayName": "WMP SFDX",
	"description": "SFDX App",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.openWorkbench",
		"onCommand:extension.retrieveSource",
		"onCommand:extension.cleanup",
		"workspaceContains:sfdx-project.json"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.openWorkbench",
				"title": "WMP SFDX: Open Workbench"
			},
			{
				"command": "extension.retrieveSource",
				"title": "WMP SFDX: Retrieve Source"
			},
			{
				"command": "extension.cleanup",
				"title": "WMP SFDX: Cleanup"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "resourceFilename == package.xml",
					"command": "extension.retrieveSource",
					"group": "z_wmpSFDX@1"
				}
			],

			"explorer/context": [
				{
					"when": "resourceFilename == package.xml",
					"command": "extension.retrieveSource",
					"group": "zwmpSFDX@1"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	}
}
