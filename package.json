{
	"name": "wmp-sfdx",
	"displayName": "WMP SFDX",
	"description": "Allows for easy access and use of sfdx-dmg-plugin commands via the Command Palette, Explorer, and Editor.",
	"bugs": {
		"url": "https://github.com/wmpcx/wmp-sfdx/issues"
	},
	"homepage": "https://github.com/wmpcx/wmp-sfdx/blob/master/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/wmpcx/wmp-sfdx.git"

	},
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"publisher" : "WestMonroePartners",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.openWorkbench",
		"onCommand:extension.retrieveSource",
		"onCommand:extension.cleanup",
		"workspaceContains:sfdx-project.json"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.openWorkbench",
				"title": "WMP SFDX: Open Workbench",
				"icon": {
					"light": "./images/workbench.png",
					"dark": "./images/workbench.png"
				}
			},
			{
				"command": "extension.retrieveSource",
				"title": "WMP SFDX: Retrieve Source",
				"icon": {
					"light": "./images/refresh.png",
					"dark": "./images/refresh.png"
				}
			},
			{
				"command": "extension.cleanup",
				"title": "WMP SFDX: Cleanup"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "resourceFilename == package.xml",
					"command": "extension.retrieveSource",
					"group": "z_wmpSFDX@1"
				}
			],
			"explorer/context": [
				{
					"when": "resourceFilename == package.xml",
					"command": "extension.retrieveSource",
					"group": "z_wmpSFDX@1"
				}
			],
			"touchBar": [
				{
					"command": "extension.openWorkbench"
				},
				{
					"when": "resourceFilename == package.xml",
					"command": "extension.retrieveSource"
				}
			]
		},
		"configuration": {
			"title": "WMP SFDX",
			"type": "object",
			"properties" : {
				"wmp-sfdx.workbench.URL": {
					"type": "string",
					"default": "https://wmpbench.herokuapp.com/",
					"description": "Workbench provider URL (custom hosted or standard SF)."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	},
	"dependencies": {
		"vsce": "^1.71.0"
	}
}
